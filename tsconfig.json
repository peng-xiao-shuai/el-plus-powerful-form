{
  "compilerOptions": {
    "outDir": "lib",
    "target": "esnext",
    "module": "esnext",
    "sourceMap": false,
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "moduleResolution": "node",
    "baseUrl": ".",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "skipLibCheck": true,
    "noEmit": true,
    "paths": {
      "~/*": [
        "./packages/*"
      ],
    },
    "types": [
      "@types/node",
      "vite/client",
    ],
    "lib": [
      "dom",
      "esnext"
    ]
  },
  "include": [
    "demo",
    "packages",
    "global.d.ts",
    "auto-imports.d.ts",
  ],
  "exclude": [
    "dist",
    "node_modules/**",
    "env.d.ts"
  ]
}
